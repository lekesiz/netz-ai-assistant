# NETZ AI Production Environment Configuration
# Copy this file to .env and update with your production values

# ===== API CONFIGURATION =====
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_LOG_LEVEL=info
ENVIRONMENT=production
DEBUG=false

# ===== SECURITY =====
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
ADMIN_EMAIL=admin@netzinformatique.fr
ADMIN_PASSWORD=change-this-password-immediately
ALLOWED_ORIGINS=https://netzinformatique.fr,https://www.netzinformatique.fr
CORS_ALLOW_CREDENTIALS=true

# ===== OLLAMA CONFIGURATION =====
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral
OLLAMA_TIMEOUT=300
MODEL_PRELOAD=mistral:latest,llama3.2:latest

# ===== DATABASE CONFIGURATION =====
# PostgreSQL (recommended for production)
DATABASE_URL=postgresql://user:password@localhost:5432/netz_ai
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_ECHO=false

# SQLite (for development/small deployments)
# DATABASE_URL=sqlite:///./data/netz_ai.db

# ===== REDIS CONFIGURATION (for caching) =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password
REDIS_SSL=false

# ===== RATE LIMITING =====
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=1000
LOGIN_RATE_LIMIT_PER_MINUTE=5
API_RATE_LIMIT_PER_MINUTE=60

# ===== STORAGE PATHS =====
RAG_STORAGE_PATH=/data/netz_ai/rag_storage
UPLOAD_PATH=/data/netz_ai/uploads
LOG_PATH=/var/log/netz_ai
MAX_UPLOAD_SIZE_MB=10

# ===== MONITORING & OBSERVABILITY =====
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
ENABLE_TRACING=true
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# ===== EMAIL CONFIGURATION =====
# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
# Or SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@netzinformatique.fr
ADMIN_EMAIL=admin@netzinformatique.fr

# ===== EXTERNAL SERVICES =====
# PennyLane Integration
PENNYLANE_API_KEY=your-pennylane-api-key
PENNYLANE_COMPANY_ID=22052053

# Web Search APIs (optional)
SERPER_API_KEY=
BRAVE_SEARCH_API_KEY=

# Analytics & Error Tracking
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===== FEATURE FLAGS =====
ENABLE_RAG=true
ENABLE_CACHING=true
ENABLE_SECURITY=true
ENABLE_ANALYTICS=true
ENABLE_WEB_SEARCH=true
ENABLE_LEARNING_MODE=true
ENABLE_ADMIN_API=true
ENABLE_AUTO_BACKUP=true

# ===== PERFORMANCE TUNING =====
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
REQUEST_TIMEOUT=60
RESPONSE_TIMEOUT=120
MAX_CONCURRENT_REQUESTS=100

# ===== BACKUP CONFIGURATION =====
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups/netz_ai
S3_BACKUP_BUCKET=netz-ai-backups

# ===== SSL/TLS CONFIGURATION =====
SSL_CERT_FILE=/etc/ssl/certs/netzinformatique.crt
SSL_KEY_FILE=/etc/ssl/private/netzinformatique.key
FORCE_HTTPS=true

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/netz_ai/api.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=10
ERROR_LOG_FILE=/var/log/netz_ai/error.log
ACCESS_LOG_FILE=/var/log/netz_ai/access.log

# ===== DEPLOYMENT SPECIFIC =====
# Docker/Kubernetes
CONTAINER_NAME=netz-ai-api
K8S_NAMESPACE=production
K8S_REPLICA_COUNT=3

# Load Balancer
LB_HEALTH_PATH=/health
LB_READY_PATH=/ready

# ===== MAINTENANCE MODE =====
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System under maintenance. Please try again later."
MAINTENANCE_ALLOWED_IPS=127.0.0.1,10.0.0.0/8