# NETZ AI Environment Variables Template
# Copy this file to .env and update with your values

# Database
POSTGRES_PASSWORD=your_strong_postgres_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=netzai_db
POSTGRES_USER=netzai

# Redis
REDIS_PASSWORD=your_strong_redis_password_here
REDIS_HOST=localhost
REDIS_PORT=6379

# Keycloak
KEYCLOAK_ADMIN_PASSWORD=your_keycloak_admin_password
KEYCLOAK_REALM=netz
KEYCLOAK_CLIENT_ID=netz-api
KEYCLOAK_CLIENT_SECRET=your_client_secret_here

# JWT
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# RabbitMQ (optional)
RABBITMQ_PASSWORD=your_rabbitmq_password

# Models
MODEL_PATH=/opt/netz-ai/models
HF_TOKEN=your_huggingface_token_if_needed

# Google API Credentials
GOOGLE_SERVICE_ACCOUNT_PATH=/etc/netz-ai/google-credentials.json
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id
GMAIL_USER=your-email@company.com

# OpenAI API (for comparison/backup)
OPENAI_API_KEY=your_openai_api_key_if_using

# Application
APP_NAME="NETZ AI Assistant"
APP_VERSION="1.0.0"
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=["https://netz-ai.local", "http://localhost:3000"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_PASSWORD=your_grafana_password

# Backup
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key
S3_BACKUP_BUCKET=netz-ai-backups
AWS_ACCESS_KEY_ID=your_aws_key_if_using_s3
AWS_SECRET_ACCESS_KEY=your_aws_secret_if_using_s3

# Email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@netz-informatique.fr
SMTP_PASSWORD=your_smtp_password
NOTIFICATION_EMAIL=admin@netz-informatique.fr

# Security
SESSION_SECRET=your_session_secret_key
ENCRYPTION_KEY=your_data_encryption_key
ALLOWED_HOSTS=netz-ai.local,localhost
SECURE_COOKIES=true
CSRF_SECRET=your_csrf_secret_key